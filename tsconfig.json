{
    "compilerOptions": {
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["es2017", "dom"],
        "target": "ESNext",
        "skipLibCheck": true,
        "outDir": "./out",
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
    ]
}
